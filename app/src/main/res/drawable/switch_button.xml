<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="#6ff" android:width="2dp"/>
            <gradient android:startColor="#0dd" android:endColor="#0dd"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:color="#0dd" android:width="2dp"/>
            <gradient android:startColor="#6ff" android:endColor="#6ff"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:color="#0dd" android:width="2dp"/>
            <gradient android:startColor="#6ff" android:endColor="#6ff"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#0dd" android:width="2dp"/>
            <gradient android:startColor="#6ff" android:endColor="#6ff"/>
        </shape>
    </item>
</selector>