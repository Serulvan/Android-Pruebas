<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sergio.pruebas.dialogos.DialogoNuevaMac"
    android:background="@color/general_background">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/dnm_et_mac"
        android:background="@drawable/abc_edit_text_material"
        android:textColor="@color/general_text"
        android:textColorHint="@color/general_text_hint" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/ec_btn_guardar"
        android:id="@+id/dnm_btn_aceptar"
        android:layout_below="@+id/dnm_et_mac"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:textColor="@color/general_text"
        android:textSize="16dp" />
</RelativeLayout>
