<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sergio.pruebas.Inicio">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addredbtn"
        android:id="@+id/btnadd"
        android:layout_above="@+id/btngest"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gestredbtn"
        android:id="@+id/btngest"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/tbserv"
        android:layout_below="@+id/btngest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:checked="false"
        android:textOn="@string/i_swbtn_on"
        android:textOff="@string/i_swbtn_off" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="limpiar shared"
        android:id="@+id/del"
        android:layout_below="@+id/btngest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ver shared"
        android:id="@+id/ver"
        android:layout_above="@+id/btngest"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_btn_config"
        android:id="@+id/btnconf" />

</RelativeLayout>
