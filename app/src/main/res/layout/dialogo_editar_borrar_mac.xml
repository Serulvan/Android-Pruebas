<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sergio.pruebas.dialogos.DialogoEditarBorrarMac"
    android:background="@color/general_background">

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="@string/deb_borrar"
        android:id="@+id/debm_btn_borrar"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="false"
        android:background="@drawable/button" />

    <Button
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="@string/deb_editar"
        android:id="@+id/debm_btn_editar"
        android:layout_toRightOf="@+id/debm_btn_borrar"
        android:layout_margin="5dp"
        android:layout_alignParentEnd="false"
        android:background="@drawable/button" />

</RelativeLayout>
